{
  "name": "react-impulse",
  "type": "module",
  "version": "1.1.0",
  "description": "The clean and natural React state management",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.cjs",
    "default": "./dist/index.cjs"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsup src/index.ts --dts --sourcemap --format=esm,cjs --clean --env.NODE_ENV=production",
    "pretest": "node ./print-react-version",
    "test": "vitest",
    "test:coverage": "pnpm test -- --run --coverage",
    "lint": "eslint . --ext=js,jsx,ts,tsx,md",
    "prettify": "prettier . --write",
    "typecheck": "tsc --noEmit",
    "cs": "changeset"
  },
  "engines": {
    "node": ">=18.7.0",
    "pnpm": ">=8.6.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owanturist/react-impulse.git"
  },
  "keywords": [
    "react",
    "react-hooks",
    "state",
    "state-management",
    "store"
  ],
  "author": "Anton Ovechkin <owanturist@gmail.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/owanturist/react-impulse/issues"
  },
  "homepage": "https://github.com/owanturist/react-impulse#readme",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "use-sync-external-store": "^1.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.28",
    "@types/testing-library__jest-dom": "^5.14.6",
    "@types/use-sync-external-store": "^0.0.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitest/coverage-c8": "^0.29.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^22.1.0",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2",
    "vitest": "^0.29.3"
  }
}
