{
  "name": "root",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "cs": "changeset",
    "version": "changeset version",
    "release": "pnpm --recursive publish --access=public && changeset tag",
    "size": "size-limit",
    "test": "vitest",
    "test:run": "pnpm test --run --reporter=dot",
    "test:coverage": "pnpm test:run --coverage",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format",
    "format:fix": "biome format --write",
    "check": "biome check",
    "check:fix": "biome check --write",
    "typecheck": "tsc --noEmit && pnpm --recursive typecheck",
    "build": "pnpm --filter './packages/*' build",
    "build:minified": "pnpm build --env.NODE_ENV=production --minify=terser",
    "docs:build": "pnpm --filter docs build",
    "docs:dev": "pnpm --filter docs dev",
    "docs:preview": "pnpm --filter docs preview",
    "docs": "pnpm docs:build && pnpm docs:preview"
  },
  "engines": {
    "node": ">=24.13.0"
  },
  "packageManager": "pnpm@10.6.5",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owanturist/signal.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "size-limit": "^12.0.0",
    "terser": "^5.46.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
