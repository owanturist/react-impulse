{
  "name": "react-impulse",
  "type": "module",
  "version": "0.0.0",
  "description": "The clean and natural React state management",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.cjs",
    "default": "./dist/index.cjs"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --sourcemap --format=esm,cjs --clean --env.NODE_ENV=production",
    "pretest": "node ./printReactVersion",
    "test": "vitest",
    "test:coverage": "npm test -- --run --coverage",
    "lint": "eslint . --ext=js,jsx,ts,tsx,md",
    "prettify": "prettier . --write",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owanturist/react-impulse.git"
  },
  "keywords": [
    "react",
    "react-hooks",
    "state",
    "state-management",
    "store"
  ],
  "author": "Anton Ovechkin <owanturist@gmail.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/owanturist/react-impulse/issues"
  },
  "homepage": "https://github.com/owanturist/react-impulse#readme",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "use-sync-external-store": "^1.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "file:node_modules/@testing-library/react",
    "@types/react": "^18.0.21",
    "@types/use-sync-external-store": "^0.0.3",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "@vitest/coverage-c8": "^0.26.3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.2",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "tsup": "^6.2.3",
    "typescript": "^4.8.4",
    "vitest": "^0.26.2"
  }
}
