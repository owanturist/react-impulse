{
  "name": "root",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "cs": "changeset",
    "size": "size-limit",
    "test": "vitest",
    "test:run": "pnpm test -- --run --reporter=dot",
    "test:coverage": "pnpm test:run --coverage",
    "lint": "eslint",
    "format": "prettier --write",
    "format:check": "prettier --check",
    "typecheck": "tsc --noEmit && pnpm --recursive typecheck",
    "build": "pnpm --recursive build",
    "build:minified": "pnpm build --env.NODE_ENV=production --minify=terser",
    "publish": "pnpm build:minified && pnpm cs publish"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "packageManager": "pnpm@10.6.5",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owanturist/react-impulse.git"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.34.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.34.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-vitest": "^0.5.4",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "size-limit": "^11.2.0",
    "terser": "^5.44.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.1.1"
  }
}
