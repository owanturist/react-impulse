{
  "name": "root",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "size": "size-limit",
    "build": "pnpm --filter ./packages/* run build",
    "build:minified": "pnpm --filter ./packages/* run build:minified",
    "test": "vitest",
    "test:run": "pnpm test -- --run --reporter=dot",
    "test:coverage": "pnpm test:run --coverage",
    "lint": "eslint --ext=js,jsx,ts,tsx",
    "format": "prettier --write",
    "format:check": "prettier --check",
    "typecheck": "tsc --noEmit",
    "cs": "changeset",
    "publish": "pnpm build && pnpm cs publish",
    "prepare": "husky install"
  },
  "size-limit": [
    {
      "path": "packages/core/dist/index.js",
      "gzip": true,
      "ignore": [
        "use-sync-external-store"
      ]
    },
    {
      "path": "packages/core/dist/index.cjs",
      "gzip": true,
      "ignore": [
        "use-sync-external-store"
      ]
    }
  ],
  "engines": {
    "node": ">=20.10.0"
  },
  "packageManager": "pnpm@8.6.3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owanturist/react-impulse.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@size-limit/preset-small-lib": "^11.0.1",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "prettier": "^3.2.2",
    "size-limit": "^11.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
