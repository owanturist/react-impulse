{
  "name": "@owanturist/signal",
  "type": "module",
  "version": "0.1.0",
  "description": "The clean and natural state management",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./monitor-factory": {
      "types": "./dist/monitor-factory.d.ts",
      "import": "./dist/monitor-factory.js",
      "require": "./dist/monitor-factory.cjs"
    }
  },
  "keywords": [
    "react",
    "react-hooks",
    "state",
    "state-management",
    "store"
  ],
  "author": "Anton Ovechkin <owanturist@gmail.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/owanturist/signal/issues"
  },
  "repository": "https://github.com/owanturist/signal/tree/master/packages/signal",
  "homepage": "https://github.com/owanturist/signal/packages/signal#readme",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup src/index.ts src/monitor-factory.ts --config ../../tsup.config.ts"
  },
  "devDependencies": {
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  }
}
